{
  "name": "wasser",
  "version": "1.0.0",
  "description": "Mixins for fluid CSS properties in SASS or LESS",
  "main": "index.js",
  "scripts": {
    "start": "node-sass examples --output examples --recursive & open examples/index.html",
    "build": "node-sass examples --output examples --recursive",
    "watch": "npm run build && node-sass examples --output examples --watch --recursive",
    "start:less": "npm run build:less & open examples/less/less.html",
    "build:less": "lessc examples/less/less.less examples/less/less.css"
  },
  "keywords": [
    "responsive",
    "css",
    "fluid",
    "scaling",
    "frontend"
  ],
  "author": "Matthias Giger",
  "license": "MIT",
  "devDependencies": {
    "less": "^3.0.0",
    "node-sass": "^4.7.2"
  }
}
